{
  "name": "malcolm",
  "version": "0.0.1",
  "description": "Malcolm - HTTP monitor-in-the-middle. A transparent proxy for monitoring HTTP traffic between client and server.",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "bin": {
    "malcolm": "./dist/cli/main.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/cli/main.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "quality": "npm run lint:check && npm run format:check && npm run typecheck && npm run test",
    "quality:fix": "npm run lint && npm run format && npm run typecheck"
  },
  "keywords": [
    "debugging",
    "http",
    "man-in-the-middle",
    "mitm",
    "monitor",
    "proxy"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsonc": "^2.18.2",
    "eslint-plugin-yml": "^1.16.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vitest": "^2.1.8"
  }
}
